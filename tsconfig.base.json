{
  "compilerOptions": {
    "lib": ["ESNext"],
    "types": ["node"],
    "disableSizeLimit": true,
    "declaration": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true
  }
}
